<!DOCTYPE html>
<html lang="it">
<head>
<meta charset="UTF-8">
<title>Votazione Skills Calcio</title>
<style>
    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background: url('campo.jpg') no-repeat center center fixed;
        background-size: cover;
        color: white;
    }
    .login-container {
        text-align: center;
        margin-top: 50px;
    }
    .player-card {
        background: rgba(0, 0, 0, 0.7);
        border-radius: 12px;
        padding: 15px;
        margin: 10px;
        width: 300px;
        display: inline-block;
        vertical-align: top;
    }
    .skill {
        margin: 8px 0;
    }
    .skill-bar {
        height: 20px;
        border-radius: 10px;
        background: gray;
        overflow: hidden;
    }
    .skill-fill {
        height: 100%;
        background: green;
        text-align: right;
        padding-right: 5px;
        color: white;
        font-size: 12px;
        line-height: 20px;
    }
    .vote-input {
        width: 100%;
    }
</style>
</head>
<body>

<div id="login-screen" class="login-container">
    <h1>Seleziona il tuo nome</h1>
    <select id="playerSelect">
        <option value="">-- Scegli il tuo nome --</option>
    </select>
    <button onclick="login()">Entra</button>
</div>

<div id="vote-screen" style="display:none; text-align:center;">
    <h1>Vota le skills dei tuoi compagni</h1>
    <div id="players-container"></div>
</div>

<script type="module">
    // ======= CONFIGURAZIONE FIREBASE =======
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.12.3/firebase-app.js";
    import { getFirestore, doc, setDoc, getDoc, updateDoc, arrayUnion, onSnapshot } from "https://www.gstatic.com/firebasejs/10.12.3/firebase-firestore.js";

    const firebaseConfig = {
        apiKey: "INSERISCI_API_KEY",
        authDomain: "INSERISCI_AUTH_DOMAIN",
        projectId: "INSERISCI_PROJECT_ID",
        storageBucket: "INSERISCI_STORAGE_BUCKET",
        messagingSenderId: "INSERISCI_MSG_ID",
        appId: "INSERISCI_APP_ID"
    };
    const app = initializeApp(firebaseConfig);
    const db = getFirestore(app);

    const players = ["Alex","Abbate","Sasi","Gino","Nicola","Andrea","Giovanni","Enzo","Isidoro","Cerullo","Petterutti","Errico","Mazza"];
    const skills = ["attacco","difesa","velocita","resistenza","forza","dribbling","tiro","passaggio","senso_tattico"];

    let currentUser = "";

    // Popola select login
    const select = document.getElementById("playerSelect");
    players.forEach(p => {
        const opt = document.createElement("option");
        opt.value = p;
        opt.textContent = p;
        select.appendChild(opt);
    });

    async function login() {
        const name = select.value;
        if (!name) {
            alert("Seleziona il tuo nome");
            return;
        }
        currentUser = name;
        document.getElementById("login-screen").style.display = "none";
        document.getElementById("vote-screen").style.display = "block";
        renderPlayers();
    }

    function renderPlayers() {
        const container = document.getElementById("players-container");
        container.innerHTML = "";
        players.forEach(player => {
            if (player === currentUser) return;
            const card = document.createElement("div");
            card.className = "player-card";
            card.innerHTML = `<h2>${player}</h2>`;
            skills.forEach(skill => {
                const skillDiv = document.createElement("div");
                skillDiv.className = "skill";
                skillDiv.innerHTML = `
                    <label>${skill}</label>
                    <input type="range" min="0" max="10" step="1" class="vote-input" id="vote-${player}-${skill}">
                    <div class="skill-bar"><div class="skill-fill" id="bar-${player}-${skill}" style="width:0%">0</div></div>
                `;
                skillDiv.querySelector(".vote-input").addEventListener("change", (e) => {
                    saveVote(player, skill, parseInt(e.target.value));
                });
                card.appendChild(skillDiv);
            });
            container.appendChild(card);
            listenForUpdates(player);
        });
    }

    async function saveVote(player, skill, value) {
        const docRef = doc(db, "votes", `${player}-${skill}`);
        const docSnap = await getDoc(docRef);
        if (docSnap.exists()) {
            const data = docSnap.data();
            if (data.voters && data.voters.includes(currentUser)) {
                alert("Hai giÃ  votato questa skill per questo giocatore");
                return;
            }
            await updateDoc(docRef, {
                voters: arrayUnion(currentUser),
                votes: arrayUnion(value)
            });
        } else {
            await setDoc(docRef, {
                voters: [currentUser],
                votes: [value]
            });
        }
    }

    function listenForUpdates(player) {
        skills.forEach(skill => {
            const docRef = doc(db, "votes", `${player}-${skill}`);
            onSnapshot(docRef, (docSnap) => {
                if (docSnap.exists()) {
                    const data = docSnap.data();
                    const votes = data.votes || [];
                    const avg = votes.length ? (votes.reduce((a,b) => a+b,0) / votes.length).toFixed(1) : 0;
                    const bar = document.getElementById(`bar-${player}-${skill}`);
                    if (bar) {
                        bar.style.width = `${avg*10}%`;
                        bar.textContent = avg;
                    }
                }
            });
        });
    }
</script>
</body>
</html>
